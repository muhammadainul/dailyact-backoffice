<div class="card">
    <div class="card-header"><strong>Privilege</strong><small> Edit</small></div>
    <div class="card-body card-block text-left">
        <form method="POST" action="/admin/privilege/update">
            <div class="row">
                <div class="col-lg-6">
                    <input type="hidden" name="privilegeid" value="#{privilege._id}">
                    <div class="form-group">
                        <label for="privilegeid" class=" form-control-label">privilegeid</label>
                        <input type="text" placeholder="privilegeid" class="form-control" id="privilegeid" value="#{privilege._id}" disabled>
                    </div>
                    <div class="form-group">
                        <label for="privilege" class=" form-control-label">privilege</label>
                        <input type="text" placeholder="privilege" class="form-control" id="privilege" name="privilege" value="#{privilege.privilege}">
                    </div>
                    <div class="form-group">
                        <label for="description" class=" form-control-label">description</label>
                        <input type="text" placeholder="description" class="form-control" id="description" name="description" value="#{privilege.description}">
                    </div>
                    <div class="form-group">
                        <label for="service" class=" form-control-label">service</label>
                        <input type="text" placeholder="TODO dropdown" class="form-control" id="service" name="service" value="#{privilege.service}">
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="actions" class=" form-control-label">actions</label>
                        <input type="text" placeholder="TODO checkboxes" class="form-control" id="actions" name="actions">
                    </div>
                    <button id="save-button" type="submit" class="btn btn-lg btn-info btn-block">
                        <i class="fa fa-save fa-lg"></i>&nbsp;
                        <span id="Save">Save</span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>