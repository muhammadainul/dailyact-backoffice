<div class="card">
    <div class="card-header">
        <strong class="card-title">Story Summary Detail</strong>
    </div>
    <div class="card-body">
        <div class="form-inline dt-bootstrap no-footer">
            <table class="table table-striped table-bordered no-footer">
                <thead>
                    <tr>
                        <th>StoryID</th>
                        <th>Content</th>
                        <th>View(Count)</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>#{story._id}</td>
                        - let str = story.files[0].s3[0].filename.split('.')
                        - let str2 = str[str.length-1]
                        if str2 == 'jpg'
                            <td>
                                <img src="#{story.files[0].s3[0].filename}" class="img-responsive">
                            </td>
                        else
                            <td>
                                <video width="360" height="240" controls>
                                    <source src="#{story.files[0].s3[0].filename}" type="video/mp4">
                                </video>
                            </td>
                        <td>#{story.viewers.length}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>