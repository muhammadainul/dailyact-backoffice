mixin isChecked(id, value)
    if value == true
        <input type="radio" id="#{id}" name="#{id}" value="true" class="form-check-input" checked>True&nbsp;
        <input type="radio" id="#{id}" name="#{id}" value="false" class="form-check-input">False
    else
        <input type="radio" id="#{id}" name="#{id}" value="true" class="form-check-input">True&nbsp;
        <input type="radio" id="#{id}" name="#{id}" value="false" class="form-check-input" checked>False

<div class="card">
    <div class="card-header"><strong>Master</strong><small> Edit</small></div>
    <div class="card-body card-block text-left">
        <form action="/user/master/update" method="post" >
            <input type="hidden" value="#{user._id}" name="userId">
            <div class="form-group">
                <label for="userid" class=" form-control-label">User ID</label>
                <input type="text" placeholder="userId" class="form-control" disabled id="userid" value="#{user._id}">
            </div>
            <div class="form-group">
                <label for="username" class=" form-control-label">Username</label>
                <input type="text" placeholder="username" class="form-control" id="username" name="username" value="#{user.username}">
            </div>
            <div class="form-group">
                <label for="email" class=" form-control-label">Local E-mail</label>
                <input type="text" placeholder="email" class="form-control" id="email" name="email" value="#{user.local.email}">
            </div>
            <div class="form-group">
                <label for="mobile" class=" form-control-label">Mobile</label>
                <div class="row">
                    <div class="col col-md-2">
                        <input type="text" placeholder="+62" class="form-control" id="country_code" name="country_code" value="#{user.country_code}">
                    </div>
                    <div class="col col-md-10">
                        <input type="text" placeholder="888xxxxxxxx" class="form-control" id="mobile" name="mobile" value="#{user.mobile}">
                    </div>
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-5"><label class=" form-control-label">VerifyOTP</label></div>
                <div class="col col-md-7">
                    <div class="form-check-inline">
                        <label for="verifyOTP" class="form-check-label ">
                            +isChecked("verifyOTP", user.verifyOTP)
                        </label>
                    </div>
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-5"><label class=" form-control-label">Enabled</label></div>
                <div class="col col-md-7">
                    <div class="form-check-inline">
                        <label for="enabled" class="form-check-label ">
                            +isChecked("enabled", user.enabled)
                        </label>
                    </div>
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-5"><label class=" form-control-label">AccountNonExpired</label></div>
                <div class="col col-md-7">
                    <div class="form-check-inline">
                        <label for="accountNonExpired" class="form-check-label ">
                            +isChecked("accountNonExpired", user.accountNonExpired)
                        </label>
                    </div>
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-5"><label class=" form-control-label">AccountNonLocked</label></div>
                <div class="col col-md-7">
                    <div class="form-check-inline">
                        <label for="accountNonLocked" class="form-check-label ">
                            +isChecked("accountNonLocked", user.accountNonLocked)
                        </label>
                    </div>
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-5"><label class=" form-control-label">Admin</label></div>
                <div class="col col-md-7">
                    <div class="form-check-inline">
                        <label for="admin" class="form-check-label ">
                            +isChecked("admin", user.admin)
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="updatedAt" class=" form-control-label">UpdatedAt</label>
                <input type="text" placeholder="updatedAt" class="form-control" id="updatedAt" disabled value="#{new Date(user.updatedAt)}">
            </div>
            <div class="form-group">
                <label for="createdAt" class=" form-control-label">CreatedAt</label>
                <input type="text" placeholder="createdAt" class="form-control" id="createdAt" disabled value="#{new Date(user.createdAt)}">
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-lg btn-info"><i class="fa fa-save"></i>&nbsp; Save</button>
            </div>
        </form>
    </div>
</div>