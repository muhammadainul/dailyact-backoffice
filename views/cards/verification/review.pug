<div class="card">
    <div class="card-header">
        <strong class="card-title mb-3">Verification Review</strong>
    </div>
    <div class="card-body">
        <form method="POST" action="">
            <ul class="list-group">
                <li class="list-group-item">_id : #{verification._id}</li>
                - let username = verification.user.username
                if (username == undefined || username == null)
                    <li class="list-group-item">Username : </li>
                else
                    <li class="list-group-item">Username : #{username}</li>
                - let firstname = verification.user.firstname
                if (firstname == undefined || firstname == null)
                    <li class="list-group-item">Firstname : </li>
                else
                    <li class="list-group-item">Firstname : #{firstname}</li>
                - let lastname = verification.user.lastname
                if (lastname == undefined || lastname == null)
                    <li class="list-group-item">Lastname : </li>
                else
                    <li class="list-group-item">Lastname : #{lastname}</li>
                - let gender = verification.user.sex
                if (gender == undefined || gender == null)
                    <li class="list-group-item">Firstname : </li>
                else
                    <li class="list-group-item">Gender : #{gender}</li>
                - let birthday = verification.user.birthday
                if (birthday == undefined || birthday == null)
                    <li class="list-group-item">Birthday : </li>
                else
                    <li class="list-group-item">Birthday : #{new Date(birthday)}</li>
                - let id_card = verification.id_card.original
                if (id_card == undefined || id_card == null)
                    <li class="list-group-item">ID Card : </li>
                else 
                    <li class="list-group-item">ID Card : 
                        <img class="img-thumbnail" style="width: 500px; height: auto;" src="data:image/png;base64,#{id_card}">
                    </li>
                <br>
                <div class="form-group">
                    <button class="openApproveConfirmation btn btn-primary" type="button" id="acceptVerification">
                        <i class="fa fa-check" aria-hidden="true"></i>
                        <span>Approve</span>
                    </button>
                    <button class="openRejectVerification btn btn-danger" type="button" id="rejectVerification">
                        <i class="fa fa-ban" aria-hidden="true"></i>
                        <span>Reject</span>
                    </button>   
                    <button class="btn btn-success" type="button" onclick="history.go(-1);">
                        <i class="fa fa-chevron-left" aria-hidden="true"></i>
                        <span>Back</span>
                    </button>
                </div>  
            </ul>
        </form>
    </div>
</div>

include /modals/verification/confirmation
include /modals/verification/reason