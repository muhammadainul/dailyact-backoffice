<div class="modal fade" id="actionAddCategory" tabindex="-1" role="dialog" aria-labelledby="actionLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="row">
                    <div class="col-sm-12">
                        <h4 class="modal-title">Add New Category</h3>
                    </div>
                </div>
            </div>
            <div class="modal-body actionBodyAddCategory" style="text-align:center;">
                <form id="categoryForm" action="/master/category/add" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <div class="form-group">
                            <label for="files" class=" form-control-label"> File</label>
                            <input type="file" name="files" accept="image/*" required>
                        </div>
                        <div class="form-group">
                            <label for="category" class=" form-control-label">Category Name</label>
                            <input type="text" placeholder="ex: CATEGORY" class="form-control" name="name" required>
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-lg btn-info"><i class="fa fa-save"></i>&nbsp; Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

