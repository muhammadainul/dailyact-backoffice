<div class="modal fade" id="actionEditCategory" tabindex="-1" role="dialog" aria-labelledby="actionLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="row">
                    <div class="col-sm-12">
                        <h4 class="modal-title">Edit Category</h3>
                    </div>
                </div>
            </div>
            <div class="modal-body actionBodyEditCategory" style="text-align:center;">
                <form id="categoryEditForm" action="/master/category/edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" id="categoryId" name="categoryId">
                    <div class="form-group">
                        <div class="form-group" id="categoryFile">
                            <label class=" form-control-label"> File</label>
                            <div class="row">
                                <div class="col-10">
                                    <input type="file" name="files" accept="image/*" required>
                                </div>
                                <div class="col-2">
                                    <button type="button" id="fileRemove" class="btn btn-sm btn-danger"><i class="fa fa-minus"></i></button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="category" class=" form-control-label">Category Name</label>
                            <input id="editCatName" type="text" placeholder="ex: CATEGORY" class="form-control" name="name" required>
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-lg btn-info" id="saveEditButton"><i class="fa fa-save"></i>&nbsp; Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

block append modal-script
    <script src="/assets/js/modals/master/category_edit.js"></script>
